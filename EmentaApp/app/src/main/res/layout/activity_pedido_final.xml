<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PedidoFinalActivity">


    <TextView
        android:id="@+id/text_titulo_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="PEDIDO"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/layout_cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_cafe"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_cafe" />

        <TextView
            android:id="@+id/text_produto_cafe"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="CAFÉ"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_cafe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.00€"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_x_cafe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_qnt_cafe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_cha"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_cha" />

        <TextView
            android:id="@+id/text_produto_cha"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="CHÁ"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_cha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.50€"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_x_cha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_qnt_cha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_nata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_nata"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_nata" />

        <TextView
            android:id="@+id/text_produto_nata"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="NATA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_nata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.90€"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_x_nata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_qnt_nata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_croissant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_croissant"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_croissant" />

        <TextView
            android:id="@+id/text_produto_croissant"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="CROISSANT"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_croissant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.90€"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_x_croissant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_qnt_croissant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lanche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_lanche"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_lanche" />

        <TextView
            android:id="@+id/text_produto_lanche"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="LANCHE"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_lanche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2.50€"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_x_lanche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_qnt_lanche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_valor_final"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Total Pedido: 0.00€"
        android:gravity="center"
        android:textSize="30sp"
        android:background="@color/brown"
        android:textColor="@color/white"/>


</LinearLayout>