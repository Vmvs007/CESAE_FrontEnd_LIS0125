<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_titulo_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="EMENTA"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/layout_cafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_cafe"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_cafe" />

        <TextView
            android:id="@+id/text_produto_cafe"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="CAFÉ"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_cafe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.00€"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_qnt_cafe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="QNT"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_cha"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_cha" />

        <TextView
            android:id="@+id/text_produto_cha"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="CHÁ"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_cha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1.50€"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_qnt_cha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="QNT"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_nata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_nata"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_nata" />

        <TextView
            android:id="@+id/text_produto_nata"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="NATA"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_nata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.90€"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_qnt_nata"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="QNT"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_croissant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_croissant"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_croissant" />

        <TextView
            android:id="@+id/text_produto_croissant"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="CROISSANT"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_croissant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.90€"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_qnt_croissant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="QNT"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_lanche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_produto_lanche"
            android:layout_width="30dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/produto_lanche" />

        <TextView
            android:id="@+id/text_produto_lanche"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="LANCHE"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_preco_lanche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2.50€"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_qnt_lanche"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="QNT"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/button_pedir"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="EFETUAR PEDIDO"
        android:layout_margin="40dp"
        android:backgroundTint="@color/brown"
        android:textSize="20sp"/>


</LinearLayout>