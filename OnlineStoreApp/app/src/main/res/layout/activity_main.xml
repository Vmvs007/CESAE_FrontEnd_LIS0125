<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_grey"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_valor_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/medium_dark_grey"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="50dp"
        android:paddingBottom="15dp"
        >

        <TextView
            android:id="@+id/text_valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 â‚¬"
            android:textSize="25sp"
            android:textColor="@color/white"

            />

        <TextView
            android:id="@+id/text_separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            />

        <TextView
            android:id="@+id/text_peso_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 Kg."
            android:textSize="25sp"
            android:textColor="@color/white"
            />



    </LinearLayout>

    <ListView
        android:id="@+id/list_view_catalogo"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <TextView
        android:id="@+id/text_separador_listas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="________________________________"
        android:textSize="25sp"
        android:textColor="@color/medium_dark_grey"
        />
    <TextView
        android:id="@+id/text_carrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CARRINHO"
        android:textSize="20sp"
        android:textColor="@color/medium_dark_grey"
        android:layout_marginBottom="20dp"
        />

    <ListView
        android:id="@+id/list_view_carrinho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>